{
  "parser": "babel-eslint",
  "extends": ["tailored-tunes", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "jest/globals": true
  },
  "rules": {
    "max-nested-callbacks": ["error", 4],
    "react/self-closing-comp": [
      "error",
      {
        "component": true,
        "html": true
      }
    ],
    "prefer-const": 2,
    "react/jsx-uses-vars": 2,
    "complexity": [
      "error",
      {
        "max": 8
      }
    ],
    "react/jsx-uses-react": "error",
    "prettier/prettier": "error"
  },
  "plugins": ["react", "jest", "prettier"]
}
